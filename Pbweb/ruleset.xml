<?xml version="1.0"?>
<ruleset name="Pbweb">
    <!-- Include the whole Symfony standard -->
    <rule ref="Symfony">
        <exclude name="PEAR.Functions.FunctionCallSignature.SpaceAfterOpenBracket"/>

        <exclude name="PSR2.Methods.FunctionCallSignature.SpaceAfterOpenBracket"/>
        <exclude name="PSR2.ControlStructures.ControlStructureSpacing.SpacingAfterOpenBrace"/>

        <exclude name="Symfony.Commenting.Annotations"/>
        <exclude name="Symfony.Commenting.FunctionComment.Missing"/>
        <exclude name="Symfony.Commenting.License"/>
        <exclude name="Symfony.ControlStructure.YodaConditions"/>
        <exclude name="Symfony.Errors.ExceptionMessage"/>
        <exclude name="Symfony.Functions.ScopeOrder.Invalid"/>
        <exclude name="Symfony.Functions.Arguments"/>

        <exclude name="Squiz.Strings.ConcatenationSpacing.PaddingFound"/>
        <exclude name="Squiz.Functions.MultiLineFunctionDeclaration.NewlineBeforeOpenBrace"/>

        <exclude name="Generic.Formatting.SpaceAfterNot"/>
    </rule>

    <rule ref="Pbweb.Formatting.SpacesConcatOperator"/>
    <rule ref="Pbweb.Formatting.SpacesUnaryNotOperator"/>
</ruleset>
